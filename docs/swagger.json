                "default": ""
              },
              "payingParties": {
                "type": "object",
                "properties": {
                  "direction": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Direction of the paying parties"
                  },
                  "payers": {
                    "type": "array",
                    "items": {
                      "type": "string"
