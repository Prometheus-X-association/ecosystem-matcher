            },
            "description": "Purpose and goals of the ecosystem"
          },
          "rolesAndResponsibilities": {
            "type": "object",
            "properties": {
              "stakeholders": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "organisation": {
                      "type": "string",
                      "description": "Participant ID of the stakeholder",
                      "required": true
                    },
                    "role": {
                      "type": "string",
                      "description": "Role of the stakeholder",
                      "required": true
                    },
                    "dataOfferings": {
                      "type": "array",
