                  "revenueModel": {
                    "type": "object",
                    "properties": {
                      "businessModel": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "payingParties": {
                        "type": "object",
                        "properties": {
                          "direction": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "payers": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        },
                        "description": "Paying parties and their direction"
                      }
                    },
                    "description": "Revenue model within the ecosystem"
                  },
                  "benefits": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Benefits within the ecosystem"
                  },
                  "costs": {
                    "type": "array",
